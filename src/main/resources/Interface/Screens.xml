<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    <screen id="start" controller="fr.utln.airhockey.StartScreenState">
        <layer id="background" childLayout="center">
            <image filename="Interface/background.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="30%" width="100%" align="center" childLayout="center">
                <text text="My Cool Game" font="Policies/TiltNeon.ttf" width="150%"
                      height="150%" textLineHeight="150" textMinHeight="150"/>
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical">
                <panel id="panel_mid_top" height="10%" width="100%" childLayout="vertical">
                    <control name="button" label="Start" id="StartButton" align="center" valign="center"><interact onClick="startGame1vsIA()"/> </control>
                </panel>
                <panel id="panel_mid_bottom" height="10%" width="100%" childLayout="vertical">
                    <control name="button" label="Quit" id="QuitButton" align="center" valign="center"><interact onClick="quitGame()"/></control>
                </panel>
            </panel>
            <panel id="panel_bottom" height="20%" width="75%" align="center"
                   childLayout="horizontal">
                <panel id="panel_bottom_left" height="100%" width="50%" valign="center"
                       childLayout="center">
                    <text text="Version 1.0" font="Interface/Fonts/Default.fnt" width="100%"
                          height="100%"/>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="emptyScreen">
        <layer id="emptyLayer" childLayout="center">
            <!-- No panels or other elements -->
        </layer>
    </screen>
    <screen id="pause" controller="fr.utln.airhockey.StartScreenState">
        <layer id="background" childLayout="center">
            <image filename="Interface/background.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center">
                <text text="My Cool Game" font="Policies/LasEnter.ttf" width="100%"
                      height="100%" />
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical">
                <panel id="panel_mid_top" height="10%" width="100%" childLayout="vertical">
                    <control name="button" label="Settings" id="SettingsButton" align="center" valign="center"><interact onClick="showSettings()"/> </control>
                </panel>
                <panel id="panel_mid_bottom" height="10%" width="100%" childLayout="vertical">
                    <control name="button" label="Quit" id="QuitButton" align="center" valign="center"><interact onClick="quitGame()"/></control>
                </panel>
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center"
                   childLayout="horizontal">
                <panel id="panel_bottom_left" height="100%" width="50%" valign="center"
                       childLayout="center">
                    <text text="Version 1.0" font="Interface/Fonts/Default.fnt" width="100%"
                          height="100%"/>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="settings" controller="fr.utln.airhockey.StartScreenState">
        <layer id="background" childLayout="center">
            <image filename="Interface/background.png" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center">
                <text text="My Cool Game" font="Policies/LasEnter.ttf" width="100%"
                      height="100%"/>
            </panel>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical">
                <panel id="panel_mid_bottom" height="10%" width="100%" childLayout="vertical">
                    <control name="button" label="Return" id="Return" align="center" valign="center"><interact onClick="showPause()"/></control>
                </panel>
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center"
                   childLayout="horizontal">
                <panel id="panel_bottom_left" height="100%" width="50%" valign="center"
                       childLayout="center">
                    <text text="Version 1.0" font="Interface/Fonts/Default.fnt" width="100%"
                          height="100%"/>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="10%" width="100%" align="center" childLayout="horizontal">
                <panel id="panel_top_left" height="100%" width="33%" valign="center" childLayout="vertical">
                    <text id="blueScoreText" text="Blue score: 0" font="Interface/Fonts/Default.fnt" width="20%" height="100%" />
                    <text id="redScoreText" text="Red score: 0" font="Interface/Fonts/Default.fnt" width="20%" height="100%" />
                </panel>
                <panel id="panel_top_center" height="100%" width="33%" valign="center" childLayout="center">
                </panel>
                <panel id="panel_top_right" height="100%" width="33%" valign="center" childLayout="vertical">
                <!--text id="timeText" text="Time: 0" font="Interface/Fonts/Default.fnt" width="100%" height="100%"/-->
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="end">
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="50%" width="100%" align="center" childLayout="center">
                <text text="Game Over" font="Interface/Fonts/Default.fnt" width="100%" height="50%" />
            </panel>
            <panel id="panel_mid" height="25%" width="100%" align="center" childLayout="horizontal">
                <text id="blueScoreEndText" text="Blue score: 0" font="Interface/Fonts/Default.fnt" width="50%" height="100%" />
                <text id="redScoreEndText" text="Red score: 0" font="Interface/Fonts/Default.fnt" width="50%" height="100%" />
            </panel>
            <panel id="panel_bottom" height="25%" width="100%" align="center" childLayout="center">
                <control name="button" label="Restart" id="RestartButton" align="center" valign="center"><interact onClick="restartGame()"/></control>
            </panel>
        </layer>
    </screen>
</nifty>

